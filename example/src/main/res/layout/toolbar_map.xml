<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/toolbar_en"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:weightSum="5">

                <TextView
                    android:id="@+id/title_map_en"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:paddingTop="45px"
                    android:textAlignment="viewStart"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/navigate_logo_map_en"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/navigate_logo"
                    android:layout_weight="2"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#FAFAFA"
                    android:onClick="backButtonToolbar"
                    android:src="@drawable/ic_arrow_back_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/toolbar_ar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:weightSum="5">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#FAFAFA"
                    android:onClick="backButtonToolbar"
                    android:src="@drawable/ic_arrow_back_black_24dp" />

                <ImageView
                    android:id="@+id/navigate_logo_map_ar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/navigate_logo"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/title_map_ar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="40px"
                    android:text=""
                    android:paddingTop="45px"
                    android:textAlignment="viewEnd"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
        </LinearLayout>
</android.support.v7.widget.Toolbar>